            <button type="submit" class="btn text-dark update">Save
                <a href="/api/users/<%= users[i]._id %>" class="btn border-shadow update"></a>
            </button>
            <!-- <a href="/update-user?id=<%= users[i]._id %>" class="btn border-shadow update"></a> -->
        </div>
        <!-- Delete -->
        <a class="btn border-shadow delete" data-id=<%= users[i]._id %> >
            <span class="text-gradient"><i class="fas fa-times"></i></span>
        </a>
    </td>
