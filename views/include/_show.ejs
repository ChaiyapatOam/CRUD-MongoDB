<tr>
    <td><%= users[i]._id %></td> 
    <td><input type="text" value="<%= users[i].name %>"></td>
    <td><input type="text" value="<%= users[i].age%>"></td>
    <td><input type="text" value="<%= users[i].email %>"></td> 
    <td><input type="text" value="<%= users[i].mobile%>"></td>
    <td><input type="text" value="<%= users[i].nickname%>"></td>
    <td><input type="text" value="<%= users[i].interest%>"></td>
    <td><input type="text" value="<%= users[i].experince%>"></td>
    <td><input type="text" value="<%= users[i].goal%>"></td>
    <td><input type="text" value="<%= users[i].courses%>"></td>
    <td><input type="text" value="<%= users[i].stat%>"></td>
    <td><input type="text" value="<%= users[i].coin%>"></td>
    <td><input type="text" value="<%= users[i].code%>"></td>
    <td><input type="text" value="<%= users[i].remark%>"></td>

    <td> 
