<!--Main Site-->
<main id="site-main">
    <div class="container" style="overflow-x:auto;">
        <!--form handing-->
        <form action="/" method="POST">
            <table border="1">
                <thead class="thead-dark">
                    <tr>
                        <th >ID</th>
                        <th >Name</th>
                        <th >nickname</th>
                        <th >age</th>
                        <th>Email</th>
                        <th>mobile</th>
                        <th>Coin</th>
                        <th>Interest</th>
                        <th>Experience</th>
                        <th>Goal</th>
                        <th>Course</th>
                        <th>Stat</th>
                        <th>Code</th>
                        <th>Remark</th>
                        <th>Discord ID</th>
                        <th>Save</th>
                    </tr>
                </thead>
            </form>
                <tbody>
                    <% for(var i =0; i<users.length;i++){ %>  
                        <tr>

                            <form method="POST" id="update_user_<%= users[i]._id%>">
